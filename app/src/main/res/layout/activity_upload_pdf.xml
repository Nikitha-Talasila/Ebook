<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".UploadPdf_Activity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:backgroundTint="@color/skyblue"
        android:src="@drawable/logout"></com.google.android.material.floatingactionbutton.FloatingActionButton>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="127dp"
        android:layout_height="121dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/pdficon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="60dp" />

    <TextView
        android:id="@+id/selectPdf"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:text="Click here to choose PDF"
        android:letterSpacing="0.1"
        android:fontFamily="@font/coustardregular"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="140dp" />

    <EditText
        android:id="@+id/title"
        android:layout_width="256dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:hint="Enter PDF Title"
        android:textSize="15dp"
        android:fontFamily="@font/coustardregular"
        android:letterSpacing="0.1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="228dp" />

    <Button
        android:id="@+id/uploadPdf"
        android:layout_width="233dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/skyblue"
        android:text="upload PDF"
        android:fontFamily="@font/coustardregular"
        android:textSize="15dp"
        android:textStyle="bold
"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="334dp" />

    <Button
        android:id="@+id/ViewDept"
        android:layout_width="233dp"
        android:layout_height="51dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="85dp"
        android:backgroundTint="@color/skyblue"
        android:fontFamily="@font/coustardregular"
        android:text="View All pdfs"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="334dp" />


</LinearLayout>